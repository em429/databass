<% if page.current? %>
  <li>
    <span class="inline-flex relative items-center px-4 py-2 text-sm font-semibold text-white bg-indigo-600 rounded-md ring-1 ring-inset ring-stone-300 focus:outline-offset-0">
      <%= page %>
    </span>
  </li>
<% else %>
  <li>
    <%= link_to page, url, class: "relative inline-flex items-center px-4 py-2 text-sm font-semibold text-stone-900 ring-1 ring-inset ring-stone-300 hover:bg-stone-50 focus:z-20 focus:outline-offset-0 rounded-md" %>
  </li>
<% end %>
